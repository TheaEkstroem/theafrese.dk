    id="scrollToTop"
    class="fixed bottom-5 right-5 border border-[#563939] bg-white text-[#563939] rounded-full w-12 h-12 shadow-lg transition-opacity duration-300"
    aria-label="Scroll to top"
  >
    ↑
  </button>

  <script>
    // finds the button
    const scrollToTopButton = document.getElementById("scrollToTop");

    // Show the button when scrolling
    window.onscroll = function () {
      if (
        document.body.scrollTop > 200 ||
        document.documentElement.scrollTop > 200
      ) {
        scrollToTopButton.style.display = "block"; // Show button
      } else {
        scrollToTopButton.style.display = "none"; // Hide button
      }
    };

    // Smooth scroll to the top
    scrollToTopButton.onclick = function () {
      window.scrollTo({
        top: 0,
        behavior: "smooth",
      });
    };
  </script>
